<%- include("../partials/header"); %> 
<div class="container pt-5 mt-5">
    <section class="mb-5">
        <h1 class="display-4 text-center pt-5">Edit <%= campground.name%>!!</h1>
    </section>
    
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" class="p-2 " id="newEditForm">
        <div class="d-flex flex-column">
            <div class="form-group">
                <input class="form-control" type="text" name="campground[name]"  value="<%= campground.name %> ">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="campground[price]"  value="<%= campground.price %>"" placeholder="<%= campground.price %> "  min="0.01" step="0.01"> 
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="campground[image]"  value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <textarea class="form-control" id="form-input-3" name="campground[description]" rows="5"><%= campground.description %> </textarea>
            </div>
        </div>
            <button class="btn btn-info btn-lg "value="Submit">Submit!!</button>
    </form>

    <section class="d-flex justify-content-center">
        <a href="/campgrounds">Go Back!!</a>
    </section>
    </div>

<%- include("../partials/footer"); %> 